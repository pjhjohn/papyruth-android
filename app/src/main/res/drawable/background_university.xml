<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/bg_highlight"/><!-- Fill Color -->
            <stroke android:width="1dp" android:color="@color/bg_highlight"/><!-- Border Color -->
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/bg_accent"/><!-- Fill Color -->
            <stroke android:width="1dp" android:color="@color/bg_accent"/><!-- Border Color -->
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp"/>
        </shape>
    </item>
    <item android:state_pressed="false" android:state_selected="false">
        <shape>
            <solid android:color="@color/white"/><!-- Fill Color -->
            <stroke android:width="1px" android:color="@color/bg_accent"/><!-- Border Color -->
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp"/>
        </shape>
    </item>
</selector>