<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/transparent"/><!-- Fill Color -->
            <stroke android:width="1dp" android:color="@color/edittext_solid_default"/><!-- Border Color -->
            <padding android:left="@dimen/baseline_x2" android:top="@dimen/baseline_x1" android:right="@dimen/baseline_x2" android:bottom="@dimen/baseline_x1"/>
            <corners android:radius="@dimen/baseline_x0.5"/>
        </shape>
    </item>
    <item android:state_focused="false">
        <shape>
            <solid android:color="@color/transparent"/><!-- Fill Color -->
            <stroke android:width="1dp" android:color="@color/edittext_solid_default"/><!-- Border Color -->
            <padding android:left="@dimen/baseline_x1" android:top="@dimen/baseline_x1" android:right="@dimen/baseline_x1" android:bottom="@dimen/baseline_x1"/>
            <corners android:radius="@dimen/baseline_x0.5"/>
        </shape>
    </item>
</selector>