<resources>
    <style name="Papyruth.Theme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Papyruth.Activity.Animation</item>
        <item name="android:textColorHint">#AAA</item>
    </style>
    <style name="Papyruth.Theme.Main" parent="Papyruth.Theme.Base">
        <item name="android:windowBackground">@color/white_90p</item>
    </style>
    <style name="Papyruth.Activity.Animation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/activity_fade_in</item>
        <item name="android:windowExitAnimation">@anim/activity_fade_out</item>
    </style>

    <style name="loading_highlight_normal">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="loading_highlight_medium">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="loading_highlight_big">
        <item name="android:textSize">45sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="button_base">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="button_rect_green" parent="button_base">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background_rect_green</item>
    </style>
    <style name="button_flat_green" parent="button_base">
        <item name="android:textColor">@color/colorchip_green</item>
        <item name="android:background">@drawable/button_background_flat_green</item>
    </style>
    <style name="button_rect_blue" parent="button_base">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background_rect_blue</item>
    </style>
    <style name="button_flat_blue" parent="button_base">
        <item name="android:textColor">@color/colorchip_green</item>
        <item name="android:background">@drawable/button_background_flat_blue</item>
    </style>
</resources>
