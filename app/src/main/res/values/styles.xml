<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>
    <style name="loading_highlight_normal">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_dark_material_dark</item>
    </style>
    <style name="loading_highlight_medium">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_dark_material_dark</item>
    </style>
    <style name="loading_highlight_big">
        <item name="android:textSize">45sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_dark_material_dark</item>
    </style>
    <style name="evaluation_grade">
        <item name="android:textSize">45sp</item>
        <item name="android:textStyle">italic|bold</item>
    </style>
    <style name="button_base">
        <item name="android:textSize">@dimen/basefont_x1.5</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="button_rect" parent="button_base">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background_rect</item>
    </style>
    <style name="button_flat" parent="button_base">
        <item name="android:textColor">@color/colorchip_green</item>
        <item name="android:background">@drawable/button_background_flat</item>
    </style>
</resources>
