<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_state_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">
    <View
        android:id="@+id/empty_state_shadow"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/shadow_transparent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/empty_state_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/baseline_x10"
            android:minWidth="@dimen/baseline_x10"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:contentDescription="@string/empty"/>
        <TextView
            android:id="@+id/empty_state_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/empty_state_icon"
            android:layout_marginTop="@dimen/baseline_x2.5"
            android:layout_marginBottom="@dimen/baseline_x1"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/empty_state_body"
            android:layout_width="@dimen/baseline_x30"
            android:layout_height="wrap_content"
            android:layout_below="@id/empty_state_title"
            android:layout_centerHorizontal="true"
            android:lineSpacingMultiplier="1.5"
            android:textSize="14sp"
            android:gravity="center"/>
    </RelativeLayout>
</RelativeLayout>