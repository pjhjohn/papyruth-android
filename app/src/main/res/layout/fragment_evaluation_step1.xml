<?xml version="1.0" encoding="utf-8"?>
<com.papyruth.support.utility.navigator.NavigatableLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="?attr/actionBarSize"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/evaluation_form_query_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/baseline_x7"
            android:padding="@dimen/baseline_x2"
            android:background="@color/inform_evaluation_form"
            android:singleLine="true"
            android:textSize="18sp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/evaluation_form_query_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>
</com.papyruth.support.utility.navigator.NavigatableLinearLayout>