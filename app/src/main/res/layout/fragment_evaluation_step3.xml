<?xml version="1.0" encoding="utf-8"?>
<com.papyruth.support.utility.navigator.NavigatableFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:padding="@dimen/baseline_x2">
                <RelativeLayout
                    android:id="@+id/evaluation_hashtags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/baseline_x2">
                    <ImageView
                        android:id="@+id/evaluation_hashtags_icon"
                        android:layout_width="@dimen/baseline_x3"
                        android:layout_height="@dimen/baseline_x3"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/empty"/>
                    <TextView
                        android:id="@+id/evaluation_hashtags_label"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/baseline_x3"
                        android:layout_marginStart="@dimen/baseline_x2"
                        android:layout_marginLeft="@dimen/baseline_x2"
                        android:layout_toRightOf="@+id/evaluation_hashtags_icon"
                        android:layout_toEndOf="@+id/evaluation_hashtags_icon"
                        android:layout_alignBottom="@+id/evaluation_hashtags_icon"
                        android:text="@string/label_evaluation_hashtags"/>
                    <TextView
                        android:id="@+id/evaluation_hashtags_container"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/evaluation_hashtags_icon"
                        android:orientation="vertical"/>
                    <EditText
                        android:id="@+id/evaluation_hashtags_text"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/baseline_x3"
                        android:inputType="text"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/baseline_x1"
                        android:layout_below="@+id/evaluation_hashtags_container"
                        android:background="@color/white"/>
                </RelativeLayout>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/evaluation_recommend_hashtag_list"
                        android:orientation="horizontal"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/baseline_x6"/>
                </HorizontalScrollView>
                <RelativeLayout
                    android:id="@+id/evaluation_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/baseline_x2">
                    <ImageView
                        android:id="@+id/evaluation_body_icon"
                        android:layout_width="@dimen/baseline_x3"
                        android:layout_height="@dimen/baseline_x3"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/empty"/>
                    <TextView
                        android:id="@+id/evaluation_body_label"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/baseline_x3"
                        android:layout_marginStart="@dimen/baseline_x2"
                        android:layout_marginLeft="@dimen/baseline_x2"
                        android:layout_toRightOf="@+id/evaluation_body_icon"
                        android:layout_toEndOf="@+id/evaluation_body_icon"
                        android:layout_alignBottom="@+id/evaluation_body_icon"
                        android:text="@string/label_evaluation_body"/>
                    <EditText
                        android:id="@+id/evaluation_body_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/baseline_x10"
                        android:inputType="textMultiLine"
                        android:layout_marginTop="@dimen/baseline_x1"
                        android:layout_below="@+id/evaluation_body_icon"
                        android:background="@color/white"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</com.papyruth.support.utility.navigator.NavigatableFrameLayout>