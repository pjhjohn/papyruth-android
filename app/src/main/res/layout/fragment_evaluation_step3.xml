<?xml version="1.0" encoding="utf-8"?>
<com.papyruth.support.utility.navigator.NavigatableLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_recyclerview">
    <View
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/transparent">
    </View><!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/baseline_x2"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/evaluation_hashtags_icon"
                android:layout_width="@dimen/baseline_x3"
                android:layout_height="@dimen/baseline_x3"
                android:layout_centerVertical="true"
                android:contentDescription="@string/empty"/>
            <TextView
                android:id="@+id/evaluation_hashtags_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/evaluation_hashtags_icon"
                android:layout_toEndOf="@+id/evaluation_hashtags_icon"
                android:layout_marginStart="@dimen/baseline_x4"
                android:layout_marginLeft="@dimen/baseline_x4"/>
        </RelativeLayout>
        <AutoCompleteTextView
            android:id="@+id/evaluation_hashtags_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/baseline_x5"
            android:layout_marginTop="@dimen/baseline_x1"
            android:background="@drawable/background_edittext_green"
            android:paddingStart="@dimen/baseline_x1"
            android:paddingEnd="@dimen/baseline_x1"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:hint="@string/hint_evalaution_form_hashtags"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
        <TextView
            android:id="@+id/evaluation_hashtags_container"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/baseline_x5"
            android:layout_marginTop="@dimen/baseline_x1"
            android:orientation="vertical"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/evaluation_body_icon"
                android:layout_width="@dimen/baseline_x3"
                android:layout_height="@dimen/baseline_x3"
                android:layout_centerVertical="true"
                android:contentDescription="@string/empty"/>
            <TextView
                android:id="@+id/evaluation_body_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/evaluation_body_icon"
                android:layout_toEndOf="@+id/evaluation_body_icon"
                android:layout_marginStart="@dimen/baseline_x4"
                android:layout_marginLeft="@dimen/baseline_x4"/>
        </RelativeLayout>
        <EditText
            android:id="@+id/evaluation_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/baseline_x10"
            android:layout_marginTop="@dimen/baseline_x1"
            android:paddingStart="@dimen/baseline_x1"
            android:paddingEnd="@dimen/baseline_x1"
            android:gravity="top"
            android:background="@drawable/background_edittext_green"
            android:inputType="textMultiLine"
            android:hint="@string/hint_evalaution_form_body"/>
    </LinearLayout>
</com.papyruth.support.utility.navigator.NavigatableLinearLayout>