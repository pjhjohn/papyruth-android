<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:inputType="textEmailAddress"
        android:hint="@string/hint_email"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:met_iconLeft="@drawable/ic_light_mail"
        app:met_hideUnderline="false"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="@string/hint_email"
        app:met_primaryColor="@color/fg_accent"
        app:met_singleLineEllipsis="true"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/nickname"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:inputType="text"
        android:hint="@string/hint_nickname"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:met_iconLeft="@drawable/ic_light_persion"
        app:met_hideUnderline="false"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="@string/hint_nickname"
        app:met_primaryColor="@color/fg_accent"
        app:met_singleLineEllipsis="true"/>
    <Button
        android:id="@+id/nextBtn"
        android:text="next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>