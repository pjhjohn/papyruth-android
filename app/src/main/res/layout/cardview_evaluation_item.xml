<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/viewholder_bg_selector"
    android:layout_marginBottom="1dp"
    android:padding="@dimen/baseline_x2">
    <ImageView
        android:id="@+id/evaluation_item_avatar"
        android:layout_width="@dimen/baseline_x5"
        android:layout_height="@dimen/baseline_x5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/baseline_x2"
        android:layout_marginEnd="@dimen/baseline_x2"
        android:contentDescription="@string/empty"/><!-- Avatar -->
    <TextView
        android:id="@+id/evaluation_item_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/evaluation_item_avatar"
        android:layout_toEndOf="@+id/evaluation_item_avatar"
        android:layout_toLeftOf="@+id/evaluation_item_timestamp"
        android:layout_toStartOf="@+id/evaluation_item_timestamp"
        android:layout_marginRight="@dimen/baseline_x2"
        android:layout_marginEnd="@dimen/baseline_x2"
        android:textSize="14sp"
        android:textColor="@color/white_30p"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="1"/><!-- Nickname -->
    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/evaluation_item_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:textSize="14sp"
        android:textColor="@color/timestamp"
        roboto:textWeight="normal"/><!-- Timestamp -->
    <RelativeLayout
        android:id="@+id/evaluation_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/evaluation_item_nickname"
        android:layout_marginTop="@dimen/baseline_x1"
        android:layout_toRightOf="@+id/evaluation_item_avatar"
        android:layout_toEndOf="@+id/evaluation_item_avatar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/evaluation_item_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/evaluation_item_overall"
            android:layout_toStartOf="@+id/evaluation_item_overall"
            android:layout_marginRight="@dimen/baseline_x1"
            android:layout_marginEnd="@dimen/baseline_x1"
            android:maxLines="3"
            android:ellipsize="end"/>
        <LinearLayout
            android:id="@+id/evaluation_item_overall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/evaluation_item_overall_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">
                <TextView
                    android:id="@+id/evaluation_item_overall_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignBaseline="@+id/evaluation_item_overall_point"
                    android:layout_toLeftOf="@+id/evaluation_item_overall_point"
                    android:layout_toStartOf="@+id/evaluation_item_overall_point"
                    android:layout_marginRight="@dimen/baseline_x1"
                    android:layout_marginEnd="@dimen/baseline_x1"
                    android:gravity="end"/><!-- Overall Label -->
                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/evaluation_item_overall_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="bottom"
                    android:textSize="36sp"
                    roboto:fontFamily="roboto"
                    roboto:textWeight="bold"/><!-- Overall Point -->
            </RelativeLayout>
            <RatingBar
                android:id="@+id/evaluation_item_overall_ratingbar"
                android:progressDrawable="@drawable/ratingbar_16dp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/baseline_x2"
                android:layout_marginLeft="@dimen/baseline_x0.5"
                android:layout_marginStart="@dimen/baseline_x0.5"
                android:isIndicator="true"
                android:numStars="5"
                android:max="10"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/evaluation_item_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/evaluation_item_content"
        android:layout_marginTop="@dimen/baseline_x1">
        <LinearLayout
            android:id="@+id/evaluation_item_hashtags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/evaluation_item_statistics"
            android:layout_toStartOf="@+id/evaluation_item_statistics"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:id="@+id/evaluation_item_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/evaluation_item_up_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/evaluation_item_up_vote_icon"
                    android:layout_width="@dimen/baseline_x4"
                    android:layout_height="@dimen/baseline_x4"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/baseline_x0.5"
                    android:contentDescription="@string/empty"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    xmlns:roboto="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/evaluation_item_up_vote_count"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/baseline_x4"
                    android:layout_toRightOf="@+id/evaluation_item_up_vote_icon"
                    android:layout_toEndOf="@+id/evaluation_item_up_vote_icon"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/baseline_x0.5"
                    android:paddingRight="@dimen/baseline_x0.5"
                    android:gravity="center"
                    roboto:textWeight="bold"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/evaluation_item_down_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/evaluation_item_down_vote_icon"
                    android:layout_width="@dimen/baseline_x4"
                    android:layout_height="@dimen/baseline_x4"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/baseline_x0.5"
                    android:contentDescription="@string/empty"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    xmlns:roboto="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/evaluation_item_down_vote_count"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/baseline_x4"
                    android:layout_toRightOf="@+id/evaluation_item_down_vote_icon"
                    android:layout_toEndOf="@+id/evaluation_item_down_vote_icon"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/baseline_x0.5"
                    android:paddingRight="@dimen/baseline_x0.5"
                    android:gravity="center"
                    roboto:textWeight="bold"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/evaluation_item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/evaluation_item_comment_icon"
                    android:layout_width="@dimen/baseline_x4"
                    android:layout_height="@dimen/baseline_x4"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/baseline_x1"
                    android:contentDescription="@string/empty"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    xmlns:roboto="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/evaluation_item_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/baseline_x4"
                    android:layout_toRightOf="@+id/evaluation_item_comment_icon"
                    android:layout_toEndOf="@+id/evaluation_item_comment_icon"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/baseline_x0.5"
                    android:paddingRight="@dimen/baseline_x0.5"
                    android:gravity="center"
                    roboto:textWeight="bold"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>