<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/cardview_evaluation"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/cardview_min_height_default"
    android:layout_gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">
        <ImageView
            android:id="@+id/evaluation_user_avatar"
            android:layout_width="@dimen/cardview_image_side_length"
            android:layout_height="@dimen/cardview_image_side_length"
            android:padding="@dimen/cardview_image_padding"
            android:contentDescription=""
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/evaluation_user_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/baseline_x2"
            android:layout_marginRight="@dimen/baseline_x2"
            android:layout_marginEnd="@dimen/baseline_x2"
            android:layout_toRightOf="@+id/evaluation_user_avatar"
            android:layout_toEndOf="@+id/evaluation_user_avatar"/>
        <TextView
            android:id="@+id/evaluation_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/baseline_x2"
            android:layout_marginRight="@dimen/baseline_x2"
            android:layout_marginEnd="@dimen/baseline_x2"
            android:layout_below="@+id/evaluation_user_nickname"
            android:layout_toRightOf="@+id/evaluation_user_avatar"
            android:layout_toEndOf="@+id/evaluation_user_avatar"/>
        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/evaluation_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:layout_marginBottom="@dimen/baseline_x2"
            android:layout_marginRight="@dimen/baseline_x2"
            android:layout_marginEnd="@dimen/baseline_x2"
            android:layout_below="@+id/evaluation_body"
            android:layout_toRightOf="@+id/evaluation_user_avatar"
            android:layout_toEndOf="@+id/evaluation_user_avatar"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#FF0000"
            android:text="TODO : TimeStamp, LectureName, UpVote, DownVote, #ofComments Hashtag"/>
    </RelativeLayout>
</FrameLayout>