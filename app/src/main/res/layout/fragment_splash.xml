<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.papyruth.support.utility.panningview.PanningView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/splash_background_panning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg"
        custom:panningDurationInMs="1200"/>
    <com.papyruth.support.utility.customview.Circle
        android:id="@+id/splash_background_circle"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="0.9"/>
    <ImageView
        android:id="@+id/splash_application_logo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logo"
        android:alpha="0"
        android:contentDescription="@string/empty"/>
</RelativeLayout>