<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.montserrat.utils.view.SquareImageView
        android:id="@+id/university_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/snu_logo"
        android:scaleType="centerCrop"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.montserrat.utils.view.SquareImageView
            android:src="@drawable/ic_schedule_black_24dp"
            android:layout_marginLeft="16dp"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <TextView
            android:text="@string/entrance_year"
            android:textSize="20sp"
            android:layout_marginLeft="72dp"
            android:textColor="@color/primary_dark_material_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/entrance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/entrance_prompt"
        android:background="@color/primary_dark_material_dark"/>


    <Button
        android:id="@+id/nextBtn"
        android:text="next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>