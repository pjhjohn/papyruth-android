<com.montserrat.utils.view.navigator.NavigatableFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/hint_email"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="@string/hint_email"
            app:met_primaryColor="@color/fg_accent"
            app:met_singleLineEllipsis="true"
            app:met_hideUnderline="true"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/realname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/hint_realname"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="@string/hint_realname"
            app:met_primaryColor="@color/fg_accent"
            app:met_singleLineEllipsis="true"
            app:met_hideUnderline="true"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/hint_nickname"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="@string/hint_nickname"
            app:met_primaryColor="@color/fg_accent"
            app:met_singleLineEllipsis="true"
            app:met_hideUnderline="true"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/hint_gender"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="@string/hint_gender"
            app:met_primaryColor="@color/fg_accent"
            app:met_hideUnderline="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/university"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:inputType="text"
                android:hint="@string/hint_university"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="@string/hint_university"
                app:met_primaryColor="@color/fg_accent"
                app:met_hideUnderline="true"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/entrance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:inputType="text"
                android:hint="@string/hint_entrance"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="@string/hint_entrance"
                app:met_primaryColor="@color/fg_accent"
                app:met_hideUnderline="true"/>
        </LinearLayout>
        <com.gc.materialdesign.views.ButtonFlat
            android:id="@+id/sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fg_normal"
            android:text="나가기"/>
    </LinearLayout>
</com.montserrat.utils.view.navigator.NavigatableFrameLayout>



