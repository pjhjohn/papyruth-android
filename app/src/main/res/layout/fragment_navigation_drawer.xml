<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/navigation_drawer_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/navigation_drawer_header_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/navigation_drawer_header_avatar"
                android:layout_width="@dimen/baseline_x8"
                android:layout_height="@dimen/baseline_x8"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/baseline_x5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/baseline_x2"
                android:layout_marginStart="@dimen/baseline_x2"
                android:layout_marginBottom="@dimen/baseline_x1"
                android:contentDescription="@string/empty"/>
            <TextView
                android:id="@+id/navigation_drawer_header_nickname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/baseline_x3.5"
                android:layout_marginLeft="@dimen/baseline_x2"
                android:layout_marginRight="@dimen/baseline_x2"
                android:layout_below="@+id/navigation_drawer_header_avatar"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/navigation_drawer_header_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/baseline_x3.5"
                android:layout_marginLeft="@dimen/baseline_x2"
                android:layout_marginRight="@dimen/baseline_x2"
                android:layout_marginBottom="@dimen/baseline_x1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/navigation_drawer_header_nickname"
                android:textSize="14sp"
                android:textColor="@android:color/white" />
            <ImageView
                android:id="@+id/navigation_drawer_header_settings"
                android:layout_width="@dimen/baseline_x7"
                android:layout_height="@dimen/baseline_x7"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/navigation_drawer_header_email"
                android:padding="@dimen/baseline_x2"
                android:src="@drawable/ic_settings_24dp"/>
        </RelativeLayout>
        <include layout="@layout/hr_white_8dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/navigation_drawer_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="true"
            android:scrollbars="vertical"
            android:overScrollMode="ifContentScrolls"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/baseline_x1"
        android:layout_alignParentBottom="true">
        <include layout="@layout/hr_nav_drawer"/>
        <include
            layout="@layout/cardview_navigation_drawer_item"
            android:id="@+id/navigation_drawer_contact_us"/>
    </LinearLayout>
</RelativeLayout>