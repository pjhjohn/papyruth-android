<com.montserrat.utils.view.navigator.NavigatableFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relativeLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="@dimen/baseline_x3">

            <ImageView
                android:id="@+id/loading_university_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_light_intro_house"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/loading_university_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/loading_university_icon"
                android:layout_toEndOf="@+id/loading_university_icon"
                android:textSize="48sp"
                app:textWeight="light"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout2"
            android:padding="@dimen/baseline_x3">

            <ImageView
                android:id="@+id/loading_user_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_light_intro_student"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/loading_user_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/loading_user_icon"
                android:layout_toEndOf="@+id/loading_user_icon"
                android:textSize="48sp"
                app:textWeight="light"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout"
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="@dimen/baseline_x3">

            <ImageView
                android:id="@+id/loading_evaluation_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_light_intro_evaluation"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/loading_evaluation_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/loading_evaluation_icon"
                android:layout_toEndOf="@+id/loading_evaluation_icon"
                android:textSize="48sp"
                app:textWeight="light"/>
        </RelativeLayout>

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/loading_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/loading_end_word"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>
</com.montserrat.utils.view.navigator.NavigatableFrameLayout>
