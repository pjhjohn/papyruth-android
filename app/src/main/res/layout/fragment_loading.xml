<com.papyruth.utils.view.navigator.NavigatableFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/baseline_x2"
        android:layout_gravity="center_vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/baseline_x3">

            <ImageView
                android:id="@+id/loading_university_icon"
                android:layout_width="@dimen/baseline_x12"
                android:layout_height="@dimen/baseline_x12"
                android:src="@drawable/ic_intro_univ_hq"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/loading_university_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/baseline_x2"
                android:gravity="end"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/loading_university_icon"
                android:layout_toEndOf="@+id/loading_university_icon"
                android:textSize="@dimen/loading_text"
                app:textWeight="light"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_80p"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2"
            android:padding="@dimen/baseline_x3">

            <ImageView
                android:id="@+id/loading_user_icon"
                android:layout_width="@dimen/baseline_x12"
                android:layout_height="@dimen/baseline_x12"
                android:src="@drawable/ic_intro_student_hq"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/loading_user_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/baseline_x2"
                android:gravity="end"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/loading_user_icon"
                android:layout_toEndOf="@+id/loading_user_icon"
                android:textSize="@dimen/loading_text"
                app:textWeight="light"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_80p"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout"
            android:padding="@dimen/baseline_x3">

            <ImageView
                android:id="@+id/loading_evaluation_icon"
                android:layout_width="@dimen/baseline_x12"
                android:layout_height="@dimen/baseline_x12"
                android:src="@drawable/ic_intro_evaluation_hq"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/loading_evaluation_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/baseline_x2"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:layout_toRightOf="@+id/loading_evaluation_icon"
                android:layout_toEndOf="@+id/loading_evaluation_icon"
                android:textSize="@dimen/loading_text"
                app:textWeight="light"/>
        </RelativeLayout>

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/loading_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/loading_text"
            android:text="@string/loading_end_word"/>
    </LinearLayout>
</com.papyruth.utils.view.navigator.NavigatableFrameLayout>
