<?xml version="1.0" encoding="utf-8"?>
<com.montserrat.utils.view.navigator.NavigatableFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/baseline_x2">
            <TextView
                android:id="@+id/lecture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/professor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/baseline_x1"
                android:gravity="center"
                android:textSize="18sp"/>
            <RelativeLayout
                android:id="@+id/evaluation_point_overall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/baseline_x2">
                <ImageView
                    android:id="@+id/evaluation_point_overall_icon"
                    android:layout_width="@dimen/baseline_x5"
                    android:layout_height="@dimen/baseline_x5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/empty"/>
                <TextView
                    android:id="@+id/evaluation_point_overall_label"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/baseline_x2"
                    android:paddingLeft="@dimen/baseline_x2"
                    android:paddingRight="@dimen/baseline_x2"
                    android:layout_toRightOf="@+id/evaluation_point_overall_icon"
                    android:layout_toEndOf="@+id/evaluation_point_overall_icon"
                    android:layout_toLeftOf="@+id/evaluation_point_overall_text"
                    android:layout_toStartOf="@+id/evaluation_point_overall_text"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/point_overall"
                    android:text="@string/label_point_overall"
                    android:textStyle="bold"
                    android:minWidth="@dimen/baseline_x6"/>

                <RatingBar
                    android:id="@+id/evaluation_point_overall_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/baseline_x3"
                    android:layout_marginLeft="@dimen/baseline_x2"
                    android:layout_marginStart="@dimen/baseline_x2"
                    android:layout_toRightOf="@+id/evaluation_point_overall_icon"
                    android:layout_toEndOf="@+id/evaluation_point_overall_icon"
                    android:layout_alignParentBottom="true"
                    android:progressDrawable="@drawable/ratingbar_24dp"
                    android:numStars="5"
                    android:max="10"
                    android:progress="0"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/evaluation_point_overall_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="32sp"
                    android:textColor="@color/point_overall"
                    android:minWidth="@dimen/baseline_x3"
                    app:fontFamily="roboto"
                    app:textWeight="light"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/evaluation_point_clarity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/baseline_x2">
                <ImageView
                    android:id="@+id/evaluation_point_clarity_icon"
                    android:layout_width="@dimen/baseline_x5"
                    android:layout_height="@dimen/baseline_x5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/empty"/>
                <TextView
                    android:id="@+id/evaluation_point_clarity_label"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/baseline_x2"
                    android:paddingLeft="@dimen/baseline_x2"
                    android:paddingRight="@dimen/baseline_x2"
                    android:layout_toRightOf="@+id/evaluation_point_clarity_icon"
                    android:layout_toEndOf="@+id/evaluation_point_clarity_icon"
                    android:layout_toLeftOf="@+id/evaluation_point_clarity_text"
                    android:layout_toStartOf="@+id/evaluation_point_clarity_text"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/point_clarity"
                    android:text="@string/label_point_clarity"
                    android:textStyle="bold"
                    android:minWidth="@dimen/baseline_x6"/>
                <SeekBar
                    android:id="@+id/evaluation_point_clarity_seekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/baseline_x3"
                    android:paddingLeft="@dimen/baseline_x2"
                    android:paddingRight="@dimen/baseline_x2"
                    android:layout_toRightOf="@+id/evaluation_point_clarity_icon"
                    android:layout_toEndOf="@+id/evaluation_point_clarity_icon"
                    android:layout_toLeftOf="@+id/evaluation_point_clarity_text"
                    android:layout_toStartOf="@+id/evaluation_point_clarity_text"
                    android:layout_alignParentBottom="true"
                    android:maxHeight="@dimen/baseline_x1"
                    android:progressDrawable="@drawable/progressbar_clarity"
                    android:thumb="@drawable/progressbar_thumb_clarity"
                    android:thumbOffset="@dimen/baseline_x1"
                    android:indeterminateOnly="false"
                    android:max="10"
                    android:progress="0"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/evaluation_point_clarity_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="32sp"
                    android:textColor="@color/point_clarity"
                    android:minWidth="@dimen/baseline_x3"
                    app:fontFamily="roboto"
                    app:textWeight="light"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/evaluation_point_easiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/baseline_x2">
                <ImageView
                    android:id="@+id/evaluation_point_easiness_icon"
                    android:layout_width="@dimen/baseline_x5"
                    android:layout_height="@dimen/baseline_x5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/empty"/>
                <TextView
                    android:id="@+id/evaluation_point_easiness_label"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/baseline_x2"
                    android:paddingLeft="@dimen/baseline_x2"
                    android:paddingRight="@dimen/baseline_x2"
                    android:layout_toRightOf="@+id/evaluation_point_easiness_icon"
                    android:layout_toEndOf="@+id/evaluation_point_easiness_icon"
                    android:layout_toLeftOf="@+id/evaluation_point_easiness_text"
                    android:layout_toStartOf="@+id/evaluation_point_easiness_text"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/point_easiness"
                    android:text="@string/label_point_easiness"
                    android:textStyle="bold"
                    android:minWidth="@dimen/baseline_x6"/>
                <SeekBar
                    android:id="@+id/evaluation_point_easiness_seekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/baseline_x3"
                    android:paddingLeft="@dimen/baseline_x2"
                    android:paddingRight="@dimen/baseline_x2"
                    android:layout_toRightOf="@+id/evaluation_point_easiness_icon"
                    android:layout_toEndOf="@+id/evaluation_point_easiness_icon"
                    android:layout_toLeftOf="@+id/evaluation_point_easiness_text"
                    android:layout_toStartOf="@+id/evaluation_point_easiness_text"
                    android:layout_alignParentBottom="true"
                    android:maxHeight="@dimen/baseline_x1"
                    android:progressDrawable="@drawable/progressbar_easiness"
                    android:thumb="@drawable/progressbar_thumb_easiness"
                    android:thumbOffset="@dimen/baseline_x1"
                    android:indeterminateOnly="false"
                    android:max="10"
                    android:progress="0"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/evaluation_point_easiness_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="32sp"
                    android:textColor="@color/point_easiness"
                    android:minWidth="@dimen/baseline_x3"
                    app:fontFamily="roboto"
                    app:textWeight="light"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/evaluation_point_gpa_satisfaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/baseline_x2">
                <ImageView
                    android:id="@+id/evaluation_point_gpa_satisfaction_icon"
                    android:layout_width="@dimen/baseline_x5"
                    android:layout_height="@dimen/baseline_x5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/empty"/>
                <TextView
                    android:id="@+id/evaluation_point_gpa_satisfaction_label"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/baseline_x2"
                    android:paddingLeft="@dimen/baseline_x2"
                    android:paddingRight="@dimen/baseline_x2"
                    android:layout_toRightOf="@+id/evaluation_point_gpa_satisfaction_icon"
                    android:layout_toEndOf="@+id/evaluation_point_gpa_satisfaction_icon"
                    android:layout_toLeftOf="@+id/evaluation_point_gpa_satisfaction_text"
                    android:layout_toStartOf="@+id/evaluation_point_gpa_satisfaction_text"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/point_gpa_satisfaction"
                    android:text="@string/label_point_gpa_satisfaction"
                    android:textStyle="bold"
                    android:minWidth="@dimen/baseline_x6"/>
                <SeekBar
                    android:id="@+id/evaluation_point_gpa_satisfaction_seekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/baseline_x3"
                    android:paddingLeft="@dimen/baseline_x2"
                    android:paddingRight="@dimen/baseline_x2"
                    android:layout_toRightOf="@+id/evaluation_point_gpa_satisfaction_icon"
                    android:layout_toEndOf="@+id/evaluation_point_gpa_satisfaction_icon"
                    android:layout_toLeftOf="@+id/evaluation_point_gpa_satisfaction_text"
                    android:layout_toStartOf="@+id/evaluation_point_gpa_satisfaction_text"
                    android:layout_alignParentBottom="true"
                    android:maxHeight="@dimen/baseline_x1"
                    android:progressDrawable="@drawable/progressbar_gpa_satisfaction"
                    android:thumb="@drawable/progressbar_thumb_gpa_satisfaction"
                    android:thumbOffset="@dimen/baseline_x1"
                    android:indeterminateOnly="false"
                    android:max="10"
                    android:progress="0"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/evaluation_point_gpa_satisfaction_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="32sp"
                    android:textColor="@color/point_gpa_satisfaction"
                    android:minWidth="@dimen/baseline_x3"
                    app:fontFamily="roboto"
                    app:textWeight="light"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</com.montserrat.utils.view.navigator.NavigatableFrameLayout>