<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4285F4">
    <TextView
        android:id="@+id/inform_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/transparent"
        android:textSize="16sp"
        android:padding="@dimen/baseline_x3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/inform_btn_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textSize="16sp"
        android:text="@string/confirm_positive"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/baseline_x1"
        android:layout_below="@+id/inform_body"
        android:visibility="visible"/>
    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/inform_btn_optional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/translucent"
        android:textSize="16sp"
        android:text="@string/confirm_optional"
        android:layout_toLeftOf="@+id/inform_btn_positive"
        android:layout_toStartOf="@+id/inform_btn_positive"
        android:layout_marginTop="@dimen/baseline_x1"
        android:layout_marginBottom="@dimen/baseline_x1"
        android:layout_below="@+id/inform_body"
        android:visibility="visible"/>
</RelativeLayout>