<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_signin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/auth_header"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="#ddd"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logo"
                    android:src="@drawable/ic_light_edit"
                    android:layout_gravity="center"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <TextView
                    android:text="@string/app_title"
                    android:textColor="@color/background_material_dark"
                    android:textSize="36sp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="@string/app_sub_title"
                    android:textColor="@color/background_material_dark"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/state_name"
                    android:text=""
                    android:textColor="@color/fg_normal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sign_up_step"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="4">
                <View
                    android:layout_height="8dp"
                    android:background="@color/translucent"
                    android:layout_marginRight="2dp"
                    android:id="@+id/step1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"/>
                <View
                    android:layout_height="8dp"
                    android:background="@color/translucent"
                    android:layout_marginRight="2dp"
                    android:id="@+id/step2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"/>
                <View
                    android:layout_height="8dp"
                    android:background="@color/translucent"
                    android:layout_marginRight="2dp"
                    android:id="@+id/step3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"/>
                <View
                    android:layout_height="8dp"
                    android:background="@color/translucent"
                    android:layout_marginRight="2dp"
                    android:id="@+id/step4"
                    android:layout_weight="1"
                    android:layout_width="match_parent"/>
            </LinearLayout>
        </LinearLayout>

        <com.montserrat.utils.view.viewpager.FlexibleViewPager
            android:id="@+id/auth_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <include layout="@layout/fac"/>
</FrameLayout>