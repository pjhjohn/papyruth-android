<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom">
    <FrameLayout
        android:id="@+id/evaluation_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/evaluation_swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent">
                <com.papyruth.support.utility.customview.EmptyStateView
                    android:id="@+id/evaluation_step_empty_state_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/evaluation_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:background="@color/background_recyclerview"
                    android:overScrollMode="ifContentScrolls"
                    android:scrollbars="vertical"/>
            </FrameLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
        <FrameLayout
            android:id="@+id/evaluation_container_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"/>
    </FrameLayout>
    <include layout="@layout/toolbar_evaluation"/>
</FrameLayout>