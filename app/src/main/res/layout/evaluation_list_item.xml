    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eval_title"
        android:layout_weight="8"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eval_prof"
        android:layout_weight="4"
        />

</LinearLayout>