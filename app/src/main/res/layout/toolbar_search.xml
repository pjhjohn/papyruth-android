<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_search_view"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:id="@+id/search_view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/background_stroke_black">
        <ImageView
            android:id="@+id/search_view_back"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_light_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/search_view_query"
            android:layout_toRightOf="@id/search_view_back"
            android:layout_toEndOf="@id/search_view_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/search_view_delete"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_light_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/search_view_outside"
            android:focusable="true"
            android:clickable="true"
            android:background="#a0ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_view_result"
            android:clickable="true"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        </FrameLayout>
</LinearLayout>