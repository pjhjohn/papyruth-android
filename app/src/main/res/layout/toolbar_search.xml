<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_search_view"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:id="@+id/search_view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/background_nostroke_white">
        <ImageView
            android:id="@+id/search_view_back"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_light_back"
            android:layout_marginLeft="@dimen/baseline_x2"
            android:layout_marginStart="@dimen/baseline_x2"
            android:layout_width="@dimen/baseline_x3"
            android:layout_height="@dimen/baseline_x3"
            android:layout_centerVertical="true"/>
        <com.montserrat.utils.view.search.PreImeEditText
            android:id="@+id/search_view_query"
            android:layout_toRightOf="@id/search_view_back"
            android:layout_toEndOf="@id/search_view_back"
            android:layout_marginLeft="@dimen/baseline_x4"
            android:layout_marginStart="@dimen/baseline_x4"
            android:focusable="true"
            android:background="@drawable/edittext_transparent"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/search_view_delete"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_light_clear"
            android:padding="@dimen/baseline_x2"
            android:layout_width="@dimen/baseline_x7"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/search_view_outside"
            android:focusable="true"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:background="@color/background_transparent_clickable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_view_result"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <include layout="@layout/hr_toolbar"
                 android:layout_below="@+id/search_view_result"
                 android:layout_width="match_parent"
                 android:layout_height="1dp"/>
    </RelativeLayout>
</LinearLayout>