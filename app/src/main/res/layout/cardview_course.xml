<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/cardview_min_height_extended"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/viewholder_bg_selector"
        android:layout_marginBottom="1dp"
        android:padding="@dimen/baseline_x2">

        <TextView
            android:id="@+id/course_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/rounded_corner"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/course_lecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/course_category"
            android:layout_marginLeft="@dimen/baseline_x1"
            android:layout_marginStart="@dimen/baseline_x1"
            android:textSize="18sp"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/course_bookmark"
            android:layout_toStartOf="@+id/course_bookmark"
            android:layout_toRightOf="@+id/course_category"
            android:layout_toEndOf="@+id/course_category"/>

        <ImageView
            android:id="@+id/course_bookmark"
            android:src="@drawable/ic_light_bookmark"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:singleLine="true"/>
        <ImageView
            android:id="@+id/course_professor_image"
            android:layout_width="@dimen/cardview_image_side_length"
            android:layout_height="@dimen/cardview_image_side_length"
            android:padding="@dimen/cardview_image_padding"
            android:contentDescription=""
            android:layout_below="@+id/course_category"
            android:layout_marginLeft="-16dp"
            android:layout_marginStart="-16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/course_professor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/course_point_overall_text"
            android:layout_marginRight="@dimen/baseline_x1"
            android:layout_marginEnd="@dimen/baseline_x1"
            android:layout_toLeftOf="@+id/course_point_overall_prefix"
            android:layout_toStartOf="@+id/course_point_overall_prefix"
            android:layout_toRightOf="@+id/course_professor_image"
            android:layout_toEndOf="@+id/course_professor_image"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="3"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/course_point_overall_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/course_point_overall_text"
            android:layout_marginRight="@dimen/baseline_x1"
            android:layout_marginEnd="@dimen/baseline_x1"
            android:layout_toLeftOf="@+id/course_point_overall_text"
            android:layout_toStartOf="@+id/course_point_overall_text"/>

        <com.devspark.robototextview.widget.RobotoTextView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/course_point_overall_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course_category"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="24sp"
            app:fontFamily="roboto"
            app:textWeight="normal"/>

        <RatingBar
            android:id="@+id/course_point_overall_star"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/baseline_x3"
            android:layout_marginTop="@dimen/baseline_x1"
            android:layout_below="@+id/course_point_overall_text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:progressDrawable="@drawable/ratingbar_24dp"
            android:isIndicator="true"
            android:numStars="5"
            android:max="10"/>

        <RelativeLayout
            android:id="@+id/course_evaluator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/course_point_overall_star"
            android:layout_toRightOf="@id/course_professor_image"
            android:layout_toEndOf="@id/course_professor_image">

            <ImageView
                android:id="@+id/course_evaluator_icon"
                android:layout_width="@dimen/baseline_x3"
                android:layout_height="@dimen/baseline_x3"
                android:contentDescription="@string/empty"
                android:layout_marginLeft="@dimen/baseline_x0.5"
                android:layout_marginRight="@dimen/baseline_x0.5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/course_evaluator_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/course_evaluator_icon"
                android:layout_toEndOf="@+id/course_evaluator_icon"
                android:layout_centerVertical="true"
                app:fontFamily="roboto"
                app:textWeight="normal"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/course_point_clarity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/baseline_x1"
            android:layout_below="@id/course_point_overall_star">

            <TextView
                android:id="@+id/course_point_clarity_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="@color/point_clarity"
                android:minWidth="@dimen/baseline_x6"
                android:gravity="right|end"/>

            <ProgressBar
                android:id="@+id/course_point_clarity_progress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/baseline_x1"
                android:layout_marginLeft="@dimen/baseline_x1"
                android:layout_marginRight="@dimen/baseline_x1"
                android:layout_toLeftOf="@+id/course_point_clarity_text"
                android:layout_toStartOf="@+id/course_point_clarity_text"
                android:layout_toRightOf="@+id/course_point_clarity_prefix"
                android:layout_toEndOf="@+id/course_point_clarity_prefix"
                android:layout_centerVertical="true"
                android:progressDrawable="@drawable/progressbar_clarity"
                android:indeterminateOnly="false"
                android:max="100"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/course_point_clarity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/point_clarity"
                android:minWidth="@dimen/baseline_x3"
                app:fontFamily="roboto"
                app:textWeight="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/course_point_gpa_satisfaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/baseline_x1"
            android:layout_below="@id/course_point_clarity">

            <TextView
                android:id="@+id/course_point_gpa_satisfaction_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="@color/point_gpa_satisfaction"
                android:minWidth="@dimen/baseline_x6"
                android:gravity="right|end"/>

            <ProgressBar
                android:id="@+id/course_point_gpa_satisfaction_progress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/baseline_x1"
                android:layout_marginLeft="@dimen/baseline_x1"
                android:layout_marginRight="@dimen/baseline_x1"
                android:layout_toLeftOf="@+id/course_point_gpa_satisfaction_text"
                android:layout_toStartOf="@+id/course_point_gpa_satisfaction_text"
                android:layout_toRightOf="@+id/course_point_gpa_satisfaction_prefix"
                android:layout_toEndOf="@+id/course_point_gpa_satisfaction_prefix"
                android:layout_centerVertical="true"
                android:progressDrawable="@drawable/progressbar_gpa_satisfaction"
                android:indeterminateOnly="false"
                android:max="100"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/course_point_gpa_satisfaction_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/point_gpa_satisfaction"
                android:minWidth="@dimen/baseline_x3"
                app:fontFamily="roboto"
                app:textWeight="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/course_point_easiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/baseline_x1"
            android:layout_below="@id/course_point_gpa_satisfaction">

            <TextView
                android:id="@+id/course_point_easiness_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="@color/point_easiness"
                android:minWidth="@dimen/baseline_x6"
                android:gravity="end|right"/>

            <ProgressBar
                android:id="@+id/course_point_easiness_progress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/baseline_x1"
                android:layout_marginLeft="@dimen/baseline_x1"
                android:layout_marginRight="@dimen/baseline_x1"
                android:layout_toLeftOf="@+id/course_point_easiness_text"
                android:layout_toStartOf="@+id/course_point_easiness_text"
                android:layout_toRightOf="@+id/course_point_easiness_prefix"
                android:layout_toEndOf="@+id/course_point_easiness_prefix"
                android:layout_centerVertical="true"
                android:progressDrawable="@drawable/progressbar_easiness"
                android:indeterminateOnly="false"
                android:max="100"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/course_point_easiness_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/point_easiness"
                android:minWidth="@dimen/baseline_x3"
                app:fontFamily="roboto"
                app:textWeight="bold"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/course_hashtags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/baseline_x2"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/baseline_x2"
            android:layout_below="@+id/course_point_easiness"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"/>

    </RelativeLayout>
</FrameLayout>