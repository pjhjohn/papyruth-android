<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/cardview_min_height_extended"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/viewholder_bg_selector"
        android:layout_marginBottom="1dp">

        <ImageView
            android:id="@+id/evaluation_item_avatar"
            android:layout_width="@dimen/cardview_image_side_length"
            android:layout_height="@dimen/cardview_image_side_length"
            android:padding="@dimen/cardview_image_padding"
            android:contentDescription=""
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/evaluation_item_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/evaluation_item_avatar"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginTop="-8dp"
            android:layout_alignLeft="@+id/evaluation_item_avatar"
            android:layout_alignStart="@+id/evaluation_item_avatar"
            android:layout_alignRight="@+id/evaluation_item_avatar"
            android:layout_alignEnd="@+id/evaluation_item_avatar"/>

        <TextView
            android:id="@+id/evaluation_item_lecture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_marginTop="@dimen/baseline_x2"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/evaluation_item_timestamp"
            android:layout_toStartOf="@+id/evaluation_item_timestamp"
            android:layout_toRightOf="@+id/evaluation_item_avatar"
            android:layout_toEndOf="@+id/evaluation_item_avatar"/>

        <TextView
            android:id="@+id/evaluation_item_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/basefont_x1"
            android:textColor="@color/bg_normal"
            android:layout_alignBaseline="@+id/evaluation_item_lecture"
            android:gravity="center"
            android:layout_marginBottom="@dimen/baseline_x2"
            android:layout_alignLeft="@+id/evaluation_item_point_overall_star"
            android:layout_alignStart="@+id/evaluation_item_point_overall_star"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>


        <TextView
            android:id="@+id/evaluation_item_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:background="@drawable/rounded_corner"
            android:layout_below="@+id/evaluation_item_lecture"
            android:layout_toRightOf="@+id/evaluation_item_avatar"
            android:layout_toEndOf="@+id/evaluation_item_avatar"
            android:layout_marginRight="@dimen/baseline_x0.5"
            android:layout_marginEnd="@dimen/baseline_x0.5"/>

        <TextView
            android:id="@+id/evaluation_item_professor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_below="@+id/evaluation_item_lecture"
            android:layout_toRightOf="@+id/evaluation_item_category"
            android:layout_toEndOf="@+id/evaluation_item_category"
            android:layout_toLeftOf="@+id/evaluation_item_point_overall_star"
            android:layout_toStartOf="@+id/evaluation_item_point_overall_star"/>
        <TextView
            android:id="@+id/evaluation_item_point_overall_text"
            android:layout_width="@dimen/baseline_x6"
            android:layout_height="@dimen/basefont_x4"
            android:textSize="@dimen/basefont_x3"
            android:layout_below="@+id/evaluation_item_timestamp"
            android:gravity="center"
            android:textStyle="italic|bold"
            android:layout_marginRight="@dimen/baseline_x1"
            android:layout_marginEnd="@dimen/baseline_x1"
            android:layout_alignLeft="@+id/evaluation_item_point_overall_star"
            android:layout_alignStart="@+id/evaluation_item_point_overall_star"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <RatingBar
            android:id="@+id/evaluation_item_point_overall_star"
            android:progressDrawable="@drawable/ratingbar_16dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/baseline_x2"
            android:numStars="5"
            android:max="10"
            android:isIndicator="true"
            android:layout_marginLeft="@dimen/baseline_x0.5"
            android:layout_marginStart="@dimen/baseline_x0.5"
            android:layout_marginRight="@dimen/baseline_x1"
            android:layout_marginEnd="@dimen/baseline_x1"
            android:layout_below="@+id/evaluation_item_point_overall_text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/evaluation_item_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/baseline_x1"
            android:layout_marginBottom="@dimen/baseline_x2"
            android:layout_below="@+id/evaluation_item_professor"
            android:layout_toRightOf="@+id/evaluation_item_avatar"
            android:layout_toEndOf="@+id/evaluation_item_avatar"
            android:layout_toLeftOf="@+id/evaluation_item_point_overall_star"
            android:layout_toStartOf="@+id/evaluation_item_point_overall_star"
            android:maxLines="3"
            android:ellipsize="end"/>
    </RelativeLayout>
</FrameLayout>