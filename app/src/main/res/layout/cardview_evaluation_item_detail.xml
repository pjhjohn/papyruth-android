<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_pressed_selector_white"
    android:layout_marginBottom="1dp"
    android:paddingTop="@dimen/baseline_x2"
    android:paddingBottom="@dimen/baseline_x2">
    <RelativeLayout
        android:id="@+id/evaluation_item_evaluator"
        android:layout_width="@dimen/baseline_x8"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/baseline_x1"
        android:layout_marginStart="@dimen/baseline_x1"
        android:layout_marginRight="@dimen/baseline_x1"
        android:layout_marginEnd="@dimen/baseline_x1">
        <ImageView
            android:id="@+id/evaluation_item_avatar"
            android:layout_width="@dimen/baseline_x6"
            android:layout_height="@dimen/baseline_x6"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/baseline_x0.5"
            android:contentDescription="@string/empty"/><!-- Avatar -->
        <TextView
            android:id="@+id/evaluation_item_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/evaluation_item_avatar"
            android:gravity="center"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end"/><!-- Nickname -->
    </RelativeLayout><!-- Avatar & Nickname -->
    <TextView
        android:id="@+id/evaluation_item_lecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/evaluation_item_evaluator"
        android:layout_toEndOf="@+id/evaluation_item_evaluator"
        android:layout_toLeftOf="@+id/evaluation_item_timestamp"
        android:layout_toStartOf="@+id/evaluation_item_timestamp"
        android:layout_marginRight="@dimen/baseline_x2"
        android:layout_marginEnd="@dimen/baseline_x2"
        android:textSize="16sp"
        android:textColor="@color/white_30p"
        android:singleLine="true"
        android:ellipsize="end"/><!-- Lecture Title -->
    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/evaluation_item_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/baseline_x2"
        android:layout_marginEnd="@dimen/baseline_x2"
        android:gravity="end"
        android:textSize="14sp"
        android:textColor="@color/timestamp"
        roboto:textWeight="normal"/><!-- Timestamp -->
    <RelativeLayout
        android:id="@+id/evaluation_item_category_prefessor_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/evaluation_item_lecture"
        android:layout_toRightOf="@+id/evaluation_item_evaluator"
        android:layout_toEndOf="@+id/evaluation_item_evaluator"
        android:layout_marginRight="@dimen/baseline_x2"
        android:layout_marginEnd="@dimen/baseline_x2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/evaluation_item_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBaseline="@+id/evaluation_item_professor"
            android:background="@drawable/background_category"
            android:textSize="11sp"/><!-- Category -->
        <TextView
            android:id="@+id/evaluation_item_professor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/evaluation_item_category"
            android:layout_toEndOf="@+id/evaluation_item_category"
            android:layout_marginLeft="@dimen/baseline_x0.5"
            android:layout_marginStart="@dimen/baseline_x0.5"
            android:layout_toLeftOf="@+id/evaluation_item_overall_ratingbar"
            android:layout_toStartOf="@+id/evaluation_item_overall_ratingbar"
            android:layout_marginRight="@dimen/baseline_x2"
            android:layout_marginEnd="@dimen/baseline_x2"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"/><!-- Professor -->
        <RatingBar
            android:id="@+id/evaluation_item_overall_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/baseline_x2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:progressDrawable="@drawable/ratingbar_16dp"
            android:isIndicator="true"
            android:numStars="5"
            android:max="10"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/evaluation_item_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/evaluation_item_category_prefessor_rating"
        android:layout_toRightOf="@+id/evaluation_item_evaluator"
        android:layout_toEndOf="@+id/evaluation_item_evaluator"
        android:layout_marginTop="@dimen/baseline_x1"
        android:layout_marginRight="@dimen/baseline_x2"
        android:layout_marginEnd="@dimen/baseline_x2"
        android:maxLines="4"
        android:ellipsize="end"/>
</RelativeLayout>