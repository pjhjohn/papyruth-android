<com.montserrat.utils.view.navigator.NavigatableFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/pager_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:padding="@dimen/baseline_x2">
            <ImageView
                android:id="@+id/application_logo"
                android:layout_width="@dimen/baseline_x20"
                android:layout_height="@dimen/baseline_x20"
                android:animateLayoutChanges="true"
                android:layout_gravity="center"
                android:src="@drawable/logo"
                android:contentDescription="@string/empty"/>
            <TextView
                android:id="@+id/state_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="@string/word_signup"
                android:textSize="@dimen/baseline_x3"
                android:textColor="@color/fg_normal"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/signup_progress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/baseline_x0.5"
            android:progressDrawable="@drawable/progressbar_signup"
            android:indeterminateOnly="false">
        </ProgressBar>
        <com.montserrat.utils.view.viewpager.FlexibleViewPager
            android:id="@+id/auth_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.montserrat.utils.view.viewpager.FlexibleViewPager>
    </LinearLayout>
</com.montserrat.utils.view.navigator.NavigatableFrameLayout>

