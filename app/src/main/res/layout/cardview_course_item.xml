<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/cardview_min_height_default"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/viewholder_bg_selector"
        android:layout_marginBottom="1dp">

        <ImageView
            android:id="@+id/course_item_professor_image"
            android:layout_width="@dimen/cardview_image_side_length"
            android:layout_height="@dimen/cardview_image_side_length"
            android:padding="@dimen/cardview_image_padding"
            android:contentDescription=""
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/course_item_lecture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_marginTop="@dimen/baseline_x2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/course_item_professor_image"
            android:layout_toEndOf="@+id/course_item_professor_image"/>

        <RelativeLayout
            android:id="@+id/course_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course_item_lecture"
            android:layout_marginRight="@dimen/baseline_x2"
            android:layout_marginEnd="@dimen/baseline_x2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/course_item_professor_image"
            android:layout_toEndOf="@+id/course_item_professor_image">

            <TextView
                android:id="@+id/course_item_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:background="@drawable/rounded_corner"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="@dimen/baseline_x0.5"
                android:layout_marginEnd="@dimen/baseline_x0.5"/>

            <TextView
                android:id="@+id/course_item_professor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/course_item_category"
                android:layout_toEndOf="@+id/course_item_category"
                android:layout_toLeftOf="@+id/course_item_point_overall_star"
                android:layout_toStartOf="@+id/course_item_point_overall_star"/>

            <RatingBar
                android:progressDrawable="@drawable/ratingbar_24dp"
                android:id="@+id/course_item_point_overall_star"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/baseline_x3"
                android:numStars="5"
                android:max="10"
                android:isIndicator="true"
                android:layout_marginLeft="@dimen/baseline_x0.5"
                android:layout_marginStart="@dimen/baseline_x0.5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/course_item_hashtags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/baseline_x2"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/baseline_x1"
            android:layout_alignTop="@+id/course_item_evaluator"
            android:layout_marginRight="@dimen/baseline_x1"
            android:layout_marginEnd="@dimen/baseline_x1"
            android:layout_toLeftOf="@+id/course_item_evaluator"
            android:layout_toStartOf="@+id/course_item_evaluator"
            android:layout_alignBottom="@+id/course_item_evaluator"
            android:layout_marginLeft="@dimen/baseline_x2"
            android:layout_marginStart="@dimen/baseline_x2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"/>

        <RelativeLayout
            android:id="@+id/course_item_evaluator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/baseline_x3"
            android:layout_below="@id/course_item_content"
            android:layout_marginTop="@dimen/baseline_x1"
            android:layout_marginRight="@dimen/baseline_x2"
            android:layout_marginEnd="@dimen/baseline_x2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/baseline_x2">

            <ImageView
                android:id="@+id/course_item_evaluator_icon"
                android:layout_width="@dimen/baseline_x3"
                android:layout_height="@dimen/baseline_x3"
                android:contentDescription="@string/empty"
                android:layout_marginLeft="@dimen/baseline_x0.5"
                android:layout_marginRight="@dimen/baseline_x0.5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/course_item_evaluator_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/course_item_evaluator_icon"
                android:layout_toEndOf="@+id/course_item_evaluator_icon"
                android:layout_centerVertical="true"
                app:fontFamily="roboto"
                app:textWeight="normal"/>
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>