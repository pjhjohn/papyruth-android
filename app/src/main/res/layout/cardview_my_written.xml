<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/cardview_min_height_extended"
    android:padding="@dimen/baseline_x1"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/my_written_lecture"
        android:textSize="@dimen/basefont_x2"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/my_written_timestamp"
        android:layout_toStartOf="@+id/my_written_timestamp"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/my_written_timestamp"
        android:textSize="@dimen/basefont_x1"
        android:layout_alignBaseline="@+id/my_written_lecture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="@dimen/baseline_x12"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/my_written_category"
        android:layout_width="@dimen/baseline_x7"
        android:layout_height="wrap_content"
        android:textSize="@dimen/basefont_x1"
        android:layout_marginTop="@dimen/baseline_x1"
        android:background="@drawable/rounded_corner"
        android:layout_below="@id/my_written_lecture"
        android:layout_marginRight="@dimen/baseline_x0.5"
        android:layout_marginEnd="@dimen/baseline_x0.5"/>
    <TextView
        android:id="@+id/my_written_professor"
        android:textSize="@dimen/basefont_x1"
        android:layout_below="@+id/my_written_lecture"
        android:layout_toRightOf="@id/my_written_category"
        android:layout_toEndOf="@id/my_written_category"
        android:layout_alignBaseline="@id/my_written_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/my_written_body"
        android:layout_marginTop="@dimen/baseline_x2"
        android:layout_below="@id/my_written_professor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/evaluation_item_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/baseline_x3"
        android:layout_below="@id/my_written_body"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/baseline_x0.5">

        <RelativeLayout
            android:id="@+id/evaluation_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/evaluation_item_comment_icon"
                android:layout_width="@dimen/baseline_x3"
                android:layout_height="@dimen/baseline_x2"
                android:contentDescription="@string/empty"
                android:layout_marginLeft="@dimen/baseline_x0.5"
                android:layout_marginRight="@dimen/baseline_x0.5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/evaluation_item_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/evaluation_item_comment_icon"
                android:layout_toEndOf="@+id/evaluation_item_comment_icon"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/evaluation_item_up_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/baseline_x0.5"
            android:layout_marginRight="@dimen/baseline_x0.5">

            <ImageView
                android:id="@+id/evaluation_item_up_vote_icon"
                android:layout_width="@dimen/baseline_x3"
                android:layout_height="@dimen/baseline_x3"
                android:contentDescription="@string/empty"
                android:layout_marginLeft="@dimen/baseline_x0.5"
                android:layout_marginRight="@dimen/baseline_x0.5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/evaluation_item_up_vote_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/evaluation_item_up_vote_icon"
                android:layout_toEndOf="@+id/evaluation_item_up_vote_icon"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/evaluation_item_down_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/baseline_x0.5"
            android:layout_marginRight="@dimen/baseline_x0.5">

            <ImageView
                android:id="@+id/evaluation_item_down_vote_icon"
                android:layout_width="@dimen/baseline_x3"
                android:layout_height="@dimen/baseline_x3"
                android:contentDescription="@string/empty"
                android:layout_marginLeft="@dimen/baseline_x0.5"
                android:layout_marginRight="@dimen/baseline_x0.5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/evaluation_item_down_vote_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/evaluation_item_down_vote_icon"
                android:layout_toEndOf="@+id/evaluation_item_down_vote_icon"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>